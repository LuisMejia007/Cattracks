<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uc.cattracks.cattracksapp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:configChanges="orientation"
            android:label="Select Your Start Location"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".LocationsList"
            android:configChanges="orientation"
            android:label="Select Your Start Location"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".DestinationsListActivity"
            android:configChanges="orientation"
            android:label="Select Your Destination"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".LocationToDestinationBusActivity"
            android:configChanges="orientation"
            android:label="Choose Your Bus"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DisplayRouteRunTimesActivity"
            android:configChanges="orientation"
            android:label="Arrival &amp; Departure Times"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BusUpdatesActivity"
            android:configChanges="orientation"
            android:label="Bus Updates"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MapActivity"
            android:label="Stops Map" />
        <activity
            android:name=".MapStopsActivity"
            android:label="Choose Location For Map View" />
    </application>

</manifest>