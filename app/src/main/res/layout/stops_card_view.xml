<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:layout_marginBottom="0dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/cardview_dark_background"
                android:id="@+id/stopPicImageView"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height= "50dp"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:translationY="12dp"
                android:text="Bellevue/ Arrow Wood"
                android:id="@+id/stopNameTextView"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:checked="false"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/stop_selected_checkbox"

                />


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:checked="false"
                android:layout_marginTop="@dimen/cardview_default_elevation"
                android:layout_marginLeft="350dp"
                android:id="@+id/destination_selected_checkbox"
                android:visibility="invisible"/>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>